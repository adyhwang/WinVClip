<Window x:Class="WinVClip.GroupManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinVClip"
        mc:Ignorable="d"
        Title="ç®¡ç†åˆ†ç»„" Height="450" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="GroupItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="{DynamicResource WindowBackground}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="ç®¡ç†åˆ†ç»„" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextForeground}"
                       Margin="0,0,0,20"/>

            <ListBox Grid.Row="1" x:Name="GroupsListBox"
                     Background="Transparent" BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     SelectionMode="Single"
                     ItemsSource="{Binding Groups}"
                     ItemContainerStyle="{StaticResource GroupItemContainerStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="GroupItemBorder" 
                                Background="{DynamicResource ItemBackground}" 
                                Padding="16,12" 
                                CornerRadius="8"
                                Effect="{x:Null}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="{Binding Name}" 
                                           Foreground="{DynamicResource TextForeground}"
                                           FontSize="15"
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0,0,0">
                                    <Button Content="âœï¸" Width="32" Height="32" Margin="0"
                                            Style="{DynamicResource ToolButtonStyle}"
                                            ToolTip="ç¼–è¾‘"
                                            Click="EditButton_Click"/>
                                    <Button Content="ðŸ—‘ï¸" Width="32" Height="32" Margin="8,0,0,0"
                                            Style="{DynamicResource ToolButtonStyle}"
                                            ToolTip="åˆ é™¤"
                                            Click="DeleteButton_Click"/>
                                </StackPanel>
                            </Grid>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ThicknessAnimation Storyboard.TargetProperty="Padding" 
                                                                From="16,12" To="14,10" 
                                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                             From="1" To="0.95" 
                                                             Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ThicknessAnimation Storyboard.TargetProperty="Padding" 
                                                                From="14,10" To="16,12" 
                                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                             From="0.95" To="1" 
                                                             Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" x:Name="NewGroupNameTextBox"
                         Height="40"
                         Style="{DynamicResource InputTextBoxStyle}"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"
                         Margin="0,0,12,0"
                         KeyDown="NewGroupNameTextBox_KeyDown"/>

                <Button Grid.Column="1" 
                        Content="æ·»åŠ åˆ†ç»„" 
                        Width="120" Height="40"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Click="AddButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>